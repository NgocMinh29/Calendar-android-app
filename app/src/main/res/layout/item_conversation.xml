<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/conversation_item_background"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="8dp"
    android:gravity="center_vertical">

    <!-- AI Icon -->
    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_ai_robot"
        android:background="@drawable/circle_background_ai"
        android:padding="12dp"
        android:tint="@color/white" />

    <!-- Conversation Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_conversation_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiêu đề cuộc trò chuyện"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorText"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tv_conversation_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Preview của cuộc trò chuyện..."
            android:textSize="14sp"
            android:textColor="@color/colorTextSecondary"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tv_conversation_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Hôm nay"
            android:textSize="12sp"
            android:textColor="@color/colorTextSecondary" />

    </LinearLayout>

    <!-- Delete Button -->
    <ImageButton
        android:id="@+id/btn_delete_conversation"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_delete"
        android:contentDescription="Xóa cuộc trò chuyện"
        app:tint="#DB4437" />

</LinearLayout>
