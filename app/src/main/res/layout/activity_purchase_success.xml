<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="#F8F9FA">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_success_simple"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🎉 Chúc mừng!"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#7E57C2"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bạn đã nâng cấp thành công lên Premium"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giờ đây bạn có thể trải nghiệm đầy đủ tính năng của ứng dụng"
        android:textSize="14sp"
        android:textColor="#666666"
        android:textAlignment="center"
        android:layout_marginBottom="24dp" />

    <!-- Thông tin giao dịch -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"/>

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/button_purple_background"
        android:backgroundTint="#4CAF50"
        android:text="Tiếp tục sử dụng"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textAllCaps="false" />

</LinearLayout>
